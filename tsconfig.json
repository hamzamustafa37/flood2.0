{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@firebase": ["./config/firebaseConfig.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "src/middleware.ts",
    "build/types/**/*.ts",
    "src/app/api/auth/[...nextauth]/route.ts"
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["./types", "./node_modules/@types"]
}
